@model IEnumerable<Kurumsal.Models.Hizmet>
@using Kurumsal.Helper;
@{
    ViewBag.Title = "KategoriHizmet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="products mt-5">
    <div class="container">

        <h1 class="mb-5">Kategori Adı</h1>
        <div class="row">
            <div class="col">

                <div class="product_grid">

                    @foreach (var item in Model)
                    {
                        <div class="product">
                            <div class="product_image"><img src="@item.ResimURL" alt=""></div>
                            <div class="product_content">
                                <div class="product_title"><a href="/UrunPost/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.HizmetId">@item.Baslik</a></div>
                                <div class="product_price">@item.Aciklama</div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Ad -->

<div class="avds_xl pb-5">
    <div class="container">
        <div class="pagination-container">
            <div class="pagination">
                <span class="pagination-inner">
                    <a href="#">1</a>
                    <a class="pagination-active" href="#">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <a href="#">5</a>
                    <a href="#">6</a>
                </span>
            </div>
        </div>
    </div>
</div>