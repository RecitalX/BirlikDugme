@model IEnumerable<Kurumsal.Models.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <div class="text-center">
        @if (TempData["DeleteMessage1"] != null)
        {
            <h5 class="alert alert-danger"> @TempData["DeleteMessage1"]</h5>
        }
    </div>

    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary d-inline">Blog Kategori Listesi</h6>&nbsp;&nbsp;
            <h5 class="font-weight-bold text-primary d-inline">
                @Html.ActionLink("Yeni ekle", "Create", null, new { @class = "btn btn-success btn-sm" })
            </h5>
        </div>

        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
                    <tr>
                        <th>
                            Kategori Adı
                        </th>
                        <th>
                            Açıklama
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.KategoriAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Aciklama)
                            </td>
                            <td width="30%">
                                @Html.ActionLink("Güncelle", "Edit", new { id = item.KategoriId }, new { @class = " btn btn-primary" })
                                @Html.ActionLink("Sil", "Delete", new { id = item.KategoriId }, new { @class = " btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
