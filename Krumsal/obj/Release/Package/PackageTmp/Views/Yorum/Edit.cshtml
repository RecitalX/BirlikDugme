@model Kurumsal.Models.Yorum

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


    <div class="container">
        <h3>Yorumu Güncelle</h3>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.YorumId)

                <div class="form-group">
                    <div class = "control-label col-md-2">Ad Soyad</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AdSoyad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AdSoyad, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class = "control-label col-md-2">Email</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Eposta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Eposta, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class = "control-label col-md-2">İçeirk</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Icerik, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Icerik, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class = "control-label col-md-2">Onay</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Onay, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Onay, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BlogId, "BlogId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("BlogId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BlogId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                        @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-danger" })

                    </div>
                </div>
            </div>
        }

    </div>