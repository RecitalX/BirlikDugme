@model Kurumsal.Models.Hizmet

@{
    ViewBag.Title = "UrunDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" style="background-image: url('../../Content/img/da.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7 text-center">
                    <h1 class="mb-4 text-white">@Model.Baslik</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-white">
    <div class="container mb-5">
        <div class="row justify-content-between mb-5">
            <div class="col-lg-6 col-md-12 col-sm-12">
                <img src="@Model.ResimURL" alt="@Model.Baslik" class="img-fluid">
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12 my-3">

                <h2 style="font-weight:bold;">@Model.Baslik</h2>

                <h4>
                    <span class="badge badge-orange">@Model.HizmetKategori.HizmetKategoriAdi</span>
                    <span class="badge badge-orange">@Model.UrunKodu</span>
                </h4>

                <p>
                    @Html.Raw(Model.Icerik)
                </p>
                Mevcut Renkler :
                @foreach (var item in Model.Renk)
                {
                    <h5 class="d-inline">
                        <span class="badge badge-orange text-white">@item.RenkAdi</span>
                    </h5>
                }

            </div>
        </div>
    </div>
    <!-- END .site-section -->
</div>
