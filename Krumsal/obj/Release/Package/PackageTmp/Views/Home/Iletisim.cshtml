
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" style="background-image: url('../../Content/img/contact.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7 text-center">
                    <h1 class="mb-4 text-white">İletişim</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">

                <form action="/Home/Iletisim/" role="form" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group row">
                        <div class="col-md-6 mb-4 mb-lg-0">
                            <input type="text" name="adsoyad" id="name" class="form-control" placeholder="Ad Soyad">
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="konu" id="subject" placeholder="Konu">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <input type="email" class="form-control" name="email" id="email" placeholder="Email Adresi">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <textarea name="mesaj" class="form-control" placeholder="Mesajınızı yazınız" cols="30" rows="10"></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            <input type="submit" class="btn btn-block btn-orange text-white py-3 px-5" value="Mesajı Gönder">
                        </div>
                    </div>

                </form>

            </div>
           
            <div class="col-lg-4 ml-auto">

                @{ 
                    Html.RenderAction("iletisimbilgisiPartial", "Home");
                }

            </div>
        </div>

    </div>
</div>