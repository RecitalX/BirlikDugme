@model IEnumerable<Kurumsal.Models.HizmetKategori>
@using Kurumsal.Helper;

<div class="categories">
    <h3>Kategoriler</h3>
    @foreach (var item in Model)
    {
        <li>
            <a href="/UrunPost/@SeoHelper.ToSeoUrl(item.HizmetKategoriAdi).ToLower()/@item.HizmetKategoriId">@item.HizmetKategoriAdi<span>(@item.Hizmet.Count())</span></a>
        </li>
    }
</div>