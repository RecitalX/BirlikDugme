                    <p>
                        @Html.Raw(item.Aciklama)
                    </p>
                }
                <p><a href="/Urunler" class="btn btn-orange text-white px-5">Ürünlerimiz</a></p>
            </div>
            <div class="col-md-6">
                @*<img src="~/Content/Şenaks/images/27760.jpg" width="80%" class="img-fluid" />*@
                <img src="~/Content/img/şenakss.jpg" class="img-fluid" />
            </div>

        </div>
    </div>
</div>