@model IEnumerable<Kurumsal.Models.Kategori>
@using Kurumsal.Helper;

<div class="categories">
    <h3>Kategoriler</h3>
    @foreach (var item in Model)
    {
        <li>
            <a href="/BlogPost/@SeoHelper.ToSeoUrl(item.KategoriAd).ToLower()/@item.KategoriId">@item.KategoriAd<span>(@item.Blog.Count())</span></a>
        </li>
    }
</div>