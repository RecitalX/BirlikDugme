@using PagedList;
@using PagedList.Mvc;
@using Kurumsal.Helper;
@model IPagedList<Kurumsal.Models.Hizmet>
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    ul.pagination {
        justify-content: center;
    }

        ul.pagination li a {
            color: white;
        }

        /*ul.pagination li a:hover {
                color: white;
            }*/


        ul.pagination li {
            background-color: #f28125;
            padding: 10px;
            padding-left: 19px;
            padding-right: 19px;
            color: white;
            cursor: pointer;
            margin: 2px;
            border-radius: 50%;
        }
</style>

<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" style="background-image: url('../../Content/img/da.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7 text-center">
                    <h1 class="mb-4 text-white">Ürünler</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <div class="row">

            <div class="col-md-8">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="item web text-center" style="background-color: #d4d4d4;">
                                <a href="UrunPost/@SeoHelper.ToSeoUrl(item.UrunKodu).ToLower()-@item.HizmetId" class="item-wrap" style="position: relative;">
                                    <span class="icon-add"></span>
                                    <img src="@item.ResimURL" alt="@item.Baslik" class="img-fluid">
                                </a>
                            </div>
                        </div>
                    }

                    <div class="col-md-12 mt-4">
                        <nav aria-label="...">
                            @Html.PagedListPager(Model, Sayfa => Url.Action("Blog", new { Sayfa }))
                        </nav>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="sidebar-box bg-light">
                    @{
                        Html.RenderAction("HizmetKategoriPartial", "Home");
                    }
                </div>
                <div class="sidebar-box bg-light">

                    <h4 class="footer-heading mb-4 font-weight-bold">Arama yap!</h4>

                    <form action="/Home/AramaYap" method="post" class="d-flex">
                        <input type="text" class="form-control mr-3" name="aranan" placeholder="Ara">
                        <input type="submit" value="Ara" class="btn btn-orange rounded-0">
                    </form>
                </div>
            </div>

        </div>
    </div>
    <!-- END .site-section -->



</div>

