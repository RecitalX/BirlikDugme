@model IEnumerable<Kurumsal.Models.Hizmet>
@using GridMvc.Html
@{
    ViewBag.Title = "AramaYap";
}

<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" style="background-image: url('../../Content//img/hero_1.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7 text-center">
                    <h1 class="mb-4 text-white">Arama Sonuçları</h1>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="py-5">

    @if (ViewBag.Notfound == null)
    {
        <div class="container my-5">
            <div class="row">
                <div class="col-md-12">
                    @Html.Grid(Model).Columns(columns =>
               {
                   columns.Add(m => m.HizmetKategori.HizmetKategoriAdi).Titled("Kategori Adı");

                   columns.Add(m => m.Baslik).Titled("Başlık").Sanitized(false).Encoded(false).RenderValueAs(m => Html.ActionLink(m.Baslik, "Hizmet", "Home", new { id = m.HizmetId, @class = "color-orange" }, null).ToHtmlString());

                   columns.Add(m => m.UrunKodu).Titled("Ürün Kodu");


               }).WithPaging(6)
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container my-5">
            <div class="row">
                <div class="col-md-12 text-center mt-80">
                    <h3 id="notfound">@ViewBag.Notfound</h3>
                    <a href="/Anasayfa" class="btn btn-orange m-4">Anasayfa'ya Dön</a>
                </div>
            </div>
        </div>
    }
</div>