@model Kurumsal.Models.Blog

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">CKEDITOR.replace('editor')</script>

<div class="container">

    <h3>Blog Ekle</h3>
    <hr />
    <div class="form">

        @using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken();
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required />
                </div>
            </div>
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
                <div class="col-lg-10">
                    <textarea class="form-control" id="Aciklama" name="Aciklama" minlength="5" type="text" required></textarea>
                </div>
            </div>
            <div class="form-group ">
                <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
                <div class="col-lg-10">
                    @Html.DropDownList("KategoriId", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
                <div class="col-lg-10">
                    <textarea class="ckeditor" name="Icerik">İçerik</textarea>
                </div>
            </div>
            <div class="form-group ">
                <label for="curl" class="control-label col-lg-2">Resim</label>
                <div class="col-lg-10">
                    <input required type="file" class="form-control" name="ResimURL" accept=".jpg,.png,.jpeg" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-primary" type="submit">Ekle</button>
                    <a class="text-white btn btn-danger" href="/Blog/Index">İptal</a>
                </div>
            </div>
        }

    </div>

</div>